@Composable
fun ElderHealthMonitorTheme(content: @Composable () -> Unit) {
    MaterialTheme(
        colorScheme = lightColorScheme(
            primary = Color(0xFF6200EE),
            secondary = Color(0xFF03DAC6),
            tertiary = Color(0xFFFF6F00),
            background = Color(0xFFF5F5F5),
            surface = Color.White,
            error = Color(0xFFB00020)
        ),
        content = content
    )
}

data class User(
    val username: String,
    val password: String,
    val role: UserRole,
    val name: String
)

enum class UserRole {
    ELDER, GUARDIAN
}

data class HealthData(
    var waterIntake: Int = 0,
    var steps: Int = 0,
    var heartRate: Int = 75,
    val emergencyContacts: MutableList<EmergencyContact> = mutableListOf()
)

data class EmergencyContact(
    val name: String,
    val phoneNumber: String,
    val relationship: String
)

@Composable
fun ElderHealthApp() {
    var currentScreen by remember { mutableStateOf<Screen>(Screen.Login) }
    var currentUser by remember { mutableStateOf<User?>(null) }
    val healthData = remember { mutableStateOf(HealthData()) }

    val users = remember {
        listOf(
            User("elder1", "elder123", UserRole.ELDER, "John Doe"),
            User("guardian1", "guard123", UserRole.GUARDIAN, "Sarah Doe")
        )
    }

    when (currentScreen) {
        is Screen.Login -> {
            LoginScreen(
                users = users,
                onLoginSuccess = { user ->
                    currentUser = user
                    currentScreen = Screen.Dashboard
                }
            )
        }
        is Screen.Dashboard -> {
            currentUser?.let { user ->
                DashboardScreen(
                    user = user,
                    healthData = healthData.value,
                    onLogout = {
                        currentUser = null
                        currentScreen = Screen.Login
                    },
                    onUpdateWater = { healthData.value = healthData.value.copy(waterIntake = it) },
                    onUpdateSteps = { healthData.value = healthData.value.copy(steps = it) },
                    onUpdateHeartRate = { healthData.value = healthData.value.copy(heartRate = it) },
                    onAddContact = { contact ->
                        healthData.value.emergencyContacts.add(contact)
                    }
                )
            }
        }
    }
}

sealed class Screen {
    object Login : Screen()
    object Dashboard : Screen()
}

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun LoginScreen(
    users: List<User>,
    onLoginSuccess: (User) -> Unit
) {
    var username by remember { mutableStateOf("") }
    var password by remember { mutableStateOf("") }
    var passwordVisible by remember { mutableStateOf(false) }
    var selectedRole by remember { mutableStateOf(UserRole.ELDER) }
    var errorMessage by remember { mutableStateOf("") }

    Box(
        modifier = Modifier
            .fillMaxSize()
            .background(
                Brush.verticalGradient(
                    colors = listOf(
                        Color(0xFF6200EE),
                        Color(0xFF03DAC6)
                    )
                )
            )
    ) {
        Column(
            modifier = Modifier
                .fillMaxSize()
                .padding(24.dp)
                .verticalScroll(rememberScrollState()),
            horizontalAlignment = Alignment.CenterHorizontally,
            verticalArrangement = Arrangement.Center
        ) {
            Icon(
                imageVector = Icons.Default.Favorite,
                contentDescription = "Health Monitor",
                modifier = Modifier.size(80.dp),
                tint = Color.White
            )

            Spacer(modifier = Modifier.height(16.dp))

            Text(
                text = "Elder Health Monitor",
                fontSize = 28.sp,
                fontWeight = FontWeight.Bold,
                color = Color.White
            )

            Spacer(modifier = Modifier.height(8.dp))

            Text(
                text = "Care for your loved ones",
                fontSize = 16.sp,
                color = Color.White.copy(alpha = 0.8f)
            )

            Spacer(modifier = Modifier.height(48.dp))

            Card(
                modifier = Modifier.fillMaxWidth(),
                shape = RoundedCornerShape(16.dp),
                elevation = CardDefaults.cardElevation(defaultElevation = 8.dp)
            ) {
                Column(
                    modifier = Modifier.padding(24.dp),
                    horizontalAlignment = Alignment.CenterHorizontally
                ) {
                    Text(
                        text = "Sign In",
                        fontSize = 24.sp,
                        fontWeight = FontWeight.Bold
                    )

                    Spacer(modifier = Modifier.height(24.dp))

                    Row(
                        modifier = Modifier.fillMaxWidth(),
                        horizontalArrangement = Arrangement.SpaceEvenly
                    ) {
                        RoleButton(
                            text = "Elder",
                            icon = Icons.Default.Person,
                            selected = selectedRole == UserRole.ELDER,
                            onClick = { selectedRole = UserRole.ELDER }
                        )
                        RoleButton(
                            text = "Guardian",
                            icon = Icons.Default.AccountCircle,
                            selected = selectedRole == UserRole.GUARDIAN,
                            onClick = { selectedRole = UserRole.GUARDIAN }
                        )
                    }

                    Spacer(modifier = Modifier.height(24.dp))

                    OutlinedTextField(
                        value = username,
                        onValueChange = { username = it },
                        label = { Text("Username") },
                        leadingIcon = {
                            Icon(Icons.Default.Person, contentDescription = null)
                        },
                        modifier = Modifier.fillMaxWidth(),
                        singleLine = true
                    )

                    Spacer(modifier = Modifier.height(16.dp))

                    OutlinedTextField(
                        value = password,
                        onValueChange = { password = it },
                        label = { Text("Password") },
                        leadingIcon = {
                            Icon(Icons.Default.Lock, contentDescription = null)
                        },
                        trailingIcon = {
                            IconButton(onClick = { passwordVisible = !passwordVisible }) {
                                Icon(
                                    imageVector = if (passwordVisible) Icons.Default.KeyboardArrowUp
                                    else Icons.Default.KeyboardArrowDown,
                                    contentDescription = "Toggle password"
                                )
                            }
                        },
                        visualTransformation = if (passwordVisible) VisualTransformation.None
                        else PasswordVisualTransformation(),
                        modifier = Modifier.fillMaxWidth(),
                        singleLine = true
                    )

                    if (errorMessage.isNotEmpty()) {
                        Spacer(modifier = Modifier.height(8.dp))
                        Text(
                            text = errorMessage,
                            color = MaterialTheme.colorScheme.error,
                            fontSize = 14.sp
                        )
                    }

                    Spacer(modifier = Modifier.height(24.dp))

                    Button(
                        onClick = {
                            val user = users.find {
                                it.username == username &&
                                        it.password == password &&
                                        it.role == selectedRole
                            }
                            if (user != null) {
                                onLoginSuccess(user)
                            } else {
                                errorMessage = "Invalid credentials or wrong role"
                            }
                        },
                        modifier = Modifier
                            .fillMaxWidth()
                            .height(50.dp),
                        shape = RoundedCornerShape(8.dp)
                    ) {
                        Text("Login", fontSize = 16.sp, fontWeight = FontWeight.Bold)
                    }

                    Spacer(modifier = Modifier.height(16.dp))

                    Text(
                        text = "Demo: elder1/elder123 or guardian1/guard123",
                        fontSize = 12.sp,
                        color = MaterialTheme.colorScheme.outline,
                        textAlign = TextAlign.Center
                    )
                }
            }
