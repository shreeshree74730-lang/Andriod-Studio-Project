@Composable
fun HeartRateCard(
    heartRate: Int,
    onUpdate: (Int) -> Unit,
    isEditable: Boolean
) {
    val heartRateStatus = when {
        heartRate < 60 -> Pair("Low", Color(0xFF2196F3))
        heartRate in 60..100 -> Pair("Normal", Color(0xFF4CAF50))
        else -> Pair("High", Color(0xFFFF9800))
    }

    Card(
        modifier = Modifier.fillMaxWidth(),
        elevation = CardDefaults.cardElevation(defaultElevation = 4.dp)
    ) {
        Column(
            modifier = Modifier.padding(16.dp)
        ) {
            Row(
                verticalAlignment = Alignment.CenterVertically
            ) {
                Icon(
                    Icons.Default.Favorite,
                    contentDescription = null,
                    modifier = Modifier.size(32.dp),
                    tint = Color(0xFFE91E63)
                )
                Spacer(modifier = Modifier.width(12.dp))
                Text(
                    text = "Heart Rate",
                    fontSize = 20.sp,
                    fontWeight = FontWeight.Bold
                )
            }

            Spacer(modifier = Modifier.height(16.dp))

            Row(
                verticalAlignment = Alignment.Bottom
            ) {
                Text(
                    text = "$heartRate",
                    fontSize = 48.sp,
                    fontWeight = FontWeight.Bold,
                    color = MaterialTheme.colorScheme.primary
                )
                Spacer(modifier = Modifier.width(8.dp))
                Text(
                    text = "BPM",
                    fontSize = 20.sp,
                    color = MaterialTheme.colorScheme.outline,
                    modifier = Modifier.padding(bottom = 8.dp)
                )
            }

            Spacer(modifier = Modifier.height(8.dp))

            Card(
                colors = CardDefaults.cardColors(
                    containerColor = heartRateStatus.second.copy(alpha = 0.2f)
                )
            ) {
                Text(
                    text = heartRateStatus.first,
                    modifier = Modifier.padding(horizontal = 12.dp, vertical = 6.dp),
                    color = heartRateStatus.second,
                    fontWeight = FontWeight.Bold
                )
            }

            if (isEditable) {
                Spacer(modifier = Modifier.height(16.dp))
                Row(
                    horizontalArrangement = Arrangement.spacedBy(8.dp)
                ) {
                    Button(
                        onClick = { if (heartRate > 40) onUpdate(heartRate - 1) },
                        modifier = Modifier.weight(1f)
                    ) {
                        Text("-1")
                    }
                    Button(
                        onClick = { if (heartRate < 200) onUpdate(heartRate + 1) },
                        modifier = Modifier.weight(1f)
                    ) {
                        Text("+1")
                    }
                }
            }
        }
    }
}

